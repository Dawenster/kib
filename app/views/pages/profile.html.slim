.profile-page
  .text-center
    .logo.logo-lg
      h2
        = @user.full_name
        small
          = @user.program_and_year

      h4
        = "Request ratio: #{@user.request_ratio_for_display}"
        i.fa.fa-question-circle.popover-item.ratio-question-icon data-container="body" data-toggle="popover" data-placement="right" data-content="#{User::REQUEST_RATIO_EXPLANATION}"
      h4
        = "Assignment ratio: #{@user.assignment_ratio_for_display}"
        i.fa.fa-question-circle.popover-item.ratio-question-icon data-container="body" data-toggle="popover" data-placement="right" data-content="#{User::ASSIGNMENT_RATIO_EXPLANATION}"

  br

  .row
    .col-xs-12
      table.table.table-striped.table-bordered.dataTable.no-footer role="grid" aria-describedby="datatable_info"
        thead
          tr
            th Type
            th Date
            th Course
            th Status
        tbody
          - @requests.each do |request|
            tr
              td = "Request to be #{request.role}"
              td = l(request.created_at, format: :date)
              td = request.course.name
              td Pending
